<div class="container">
  <h1 class="mt-4 mb-4">Edit Restaurant</h1>
  <%= form_with(model: @restaurant, local: true) do |form| %>
    <% if @restaurant.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading">Please fix the following errors:</h4>
        <ul>
          <% @restaurant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :address, class: 'form-label' %>
      <%= form.text_field :address, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :category, class: 'form-label' %>
      <%= form.select :category, ['chinese', 'italian', 'japanese', 'french', 'belgian'], {}, class: 'form-select' %>
    </div>

    <%= form.submit 'Update Restaurant', class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'Back to List', restaurants_path, class: 'btn btn-secondary mt-3' %>
</div>
