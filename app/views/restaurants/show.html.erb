<div class="container">
  <h1 class="mt-4 mb-4"><%= @restaurant.name %></h1>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <p><%= review.content %> <%="⭐" * review.rating %></p>
    <% end %>
  </ul>
  <br>
  <div class="mt-4">
    <%= link_to 'Back to List', restaurants_path, class: 'btn btn-primary' %>
    <%= link_to 'Edit',  edit_restaurant_path(@restaurant), class: 'btn btn-primary' %>
  </div>
</div>
<div class="container">
  <h1>New Review for <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: 0..5 %>
    <%= f.submit 'Submit Review', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back', restaurant_path(@restaurant), class: 'btn btn-secondary' %>
</div>
